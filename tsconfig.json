{
  "compilerOptions": {
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2018",
    "newLine": "LF",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules"
  ]
}